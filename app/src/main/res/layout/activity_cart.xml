<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context="com.notadeveloper.app.sgnadmin.Cart">

    <android.support.v7.widget.RecyclerView android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"

    android:id="@+id/recyc"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: â‚¹"
        android:textSize="30dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="20dp"
        android:id="@+id/pricetext13"
        android:layout_alignParentRight="true"

        android:layout_below="@+id/recyc"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/AccentButton"
        android:text="Order Delivered!"
        android:textSize="15dp"
        android:padding="20dp"
        android:layout_alignRight="@+id/pricetext13"
        android:id="@+id/orderstatus"
        android:layout_below="@+id/pricetext13"
        android:layout_marginTop="25dp"
        android:filterTouchesWhenObscured="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/AccentButton"
        android:text="Cancel order!"
        android:textSize="15dp"
        android:padding="20dp"
        android:id="@+id/cancelorder"
        android:layout_alignBottom="@+id/orderstatus"
        android:layout_toLeftOf="@+id/orderstatus"
        android:filterTouchesWhenObscured="true"/>


</RelativeLayout>
</ScrollView>
