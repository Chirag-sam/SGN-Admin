<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.notadeveloper.app.sgnadmin.com.notadeveloper.chirag.sgnadmin.MainActivity"
    android:background="@color/secondary_text">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:srcCompat="@drawable/hospital"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/logov"
        />
    <Button
        android:id="@+id/porders"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:filterTouchesWhenObscured="true"
        android:text="PENDING ORDERS"
        android:theme="@style/AccentButton"
        android:layout_below="@+id/logov"
        android:layout_marginBottom="20dp"
    />
    <Button
        android:id="@+id/corders"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:filterTouchesWhenObscured="true"
        android:text="COMPLETED ORDERS"
        android:theme="@style/AccentButton"
        android:layout_below="@+id/porders"
        android:layout_marginBottom="20dp"
    />
    <Button
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:filterTouchesWhenObscured="true"
        android:text="EDIT PRODUCTS"
        android:theme="@style/AccentButton"
        android:layout_below="@+id/corders"
        android:layout_marginBottom="20dp"
    />

    <Button
    android:id="@+id/add"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:filterTouchesWhenObscured="true"
    android:text="ADD PRODUCTS"
    android:theme="@style/AccentButton"
    android:layout_below="@+id/edit"
    />


</RelativeLayout>
</ScrollView>